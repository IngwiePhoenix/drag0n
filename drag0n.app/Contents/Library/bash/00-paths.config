#!/bin/bash
# 01: pathreader.auto

# Getting current path
cpath="$(pwd)/.."

# Setting up structure
# folders:
MAIN=$cpath
dBIN=$cpath/bin
jsBIN=$cpath/js-bin
htmlBIN=$cpath/html-bin
phpBIN=$cpath/php-bin
infDIR=$cpath/inf
resDIR=$cpath/Resources
runDIR=$cpath/MacOS
updDIR=$cpath/UPDATES
tmpDIR=$cpath/tmp
logDIR=$HOME/Library/Logs/Drag0n
storeDIR=$HOME/Library/Drag0n
dbDIR=$storeDIR/database
srcDIR=$storeDIR/sources

# files
instlIST=$storeDIR/Installed.d0

# externals
if [ -f $cpath/bin/CocoaDialog.app/Contents/MacOS/CocoaDialog ]; then
	CCD=$cpath/bin/CocoaDialog.app/Contents/MacOS/CocoaDialog
elif [ -f $cpath/Contents/bin/CocoaDialog.app/Contents/MacOS/CocoaDialog ]; then
	CCD=$cpath/Contents/bin/CocoaDialog.app/Contents/MacOS/CocoaDialog 
else
	echo $cpath
fi

# URLs
upd="http://drag0ninstaller.tk/update.source"

# pathsetup
PATH=$dBIN:$PATH
